<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/bootstrap.min.css">
    <link rel="stylesheet" href="css/style.css">
    {{!-- for button icons from fontawesome icons --}}
    <script src="https://kit.fontawesome.com/bebf8bfc83.js" crossorigin="anonymous"></script>
    {{!--
    <link rel="stylesheet" href="../node_modules/bootstrap/dist/css/bootstrap.min.css"> --}}
    <title>My Courses</title>

    <style>
        span {
            border: 3px;
            border-radius: 2px;
            border-color: black;
            background-color: aliceblue;

        }

        .btn {
            font-family: Verdana, Geneva, Tahoma, sans-serif;
            font-size: 1.3rem;
        }

        .btn.btn-success:hover {
            color: black;
            font-weight: 900;
            background-color: rgb(106, 212, 115);
        }

        .btn.btn-danger:hover {
            color: black;
            font-weight: 900;
            background-color: rgb(255, 111, 111);
        }

        .btn:hover {
            color: darkblue;
            background-color: rgb(205, 213, 216);
        }

        th {

            font-size: 20px;
            font-weight: 800;
            font-family: Verdana;
        }
    </style>

</head>

<body onload="javascript:hideTable()">


    <script>
        function showTable() {
            document.getElementById('table').style.display = "table-row";
        }
        function hideTable() {
            document.getElementById('table').style.display = "none";
        }
    </script>
    {{!-- <button class="btn btn-success">Fanstastic</button>
    use navbar.hbs file here in index file
    --}}
    {{>navbar}}
    <div class="container-fluid mt-5 contact-style">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <h1 class="text-center sub-heading" style="font-size: medium;">Core course required
                    credits:<span>{{demo.cr}} </span> GER required credits:<span> {{demo.gr}} </span> Major elective
                    required credits:<span>{{demo.mr}}</span> </h1>

                <h1 class="text-center sub-heading" style="font-size: medium;">Core course taken
                    credits:<span>{{demo.ct}}</span> GER taken credits:<span>{{demo.gt}}</span> Major elective taken
                    credits:<span>{{demo.mt}}</span> </h1>

                <div class="row">
                    <div class="col-md-8 col-12 mx-auto">
                        <h1 class="mt-5 mb-4" style="color: #fd5c63;">Filter Courses</h1>
                        <form action="/display-course" method="GET">
                            <table class="table1">
                                <thead>
                                    <tr class="table-active">
                                        <th class="task-td">Search course by category</th>
                                        <th class="task-td">Search course by faculty</th>
                                        <th class="task-td">Search course by credits</th>
                                        <th></th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <tr>
                                        <td> <select class="task3" name="course_cat">
                                                <option value="" selected disabled hidden>Select & search by Category
                                                </option>
                                                <option>GER</option>
                                                <option>Core</option>
                                                <option>Major elective</option>
                                                <option>Economics</option>

                                            </select></th>
                                        <td> <select class="task3" name="course_faculty">
                                                <option value="" selected disabled hidden>Select & search by Faculty
                                                </option>
                                                <option>Kuntal Patel</option>
                                                <option>Ashok Ranade</option>
                                                <option>Preeti Manek</option>
                                                <option>Dhaval Patel</option>
                                                <option>Shrikrishnan Divakaran</option>

                                            </select></th>
                                        <td> <select class="task3" name="course_credit">
                                                <option value="" selected disabled hidden>Select & search by Course
                                                    Credit</option>
                                                <option>1.5</option>
                                                <option>2</option>
                                                <option>3</option>
                                                <option>4</option>
                                                <option>OTHER</option>

                                            </select></th>
                                            {{!--
                                        <td> <input type="date" name="date" required></th> --}}
                                        <td><input type="submit" class="btn btn-success ps-3 pe-3 task1" id="add"
                                                value="Search"></th>
                                    </tr>
                                </tbody>
                            </table>
                        </form>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8 col-12 mx-auto">


                        {{!-- <h1>selected Courses</h1> --}}
                        <h1 class="mt-5 mb-3 pt-3" style="color: #fd5c63;"> Course Directory</h1>
                        <form action="/display-course" method="GET">
                            <table class="table3">
                                <thead>
                                    <tr class="course1">

                                        <th style="font-size: 1.5rem; font-weight:900"><span class=""> Course Name</span></th>
                                        <th style="font-size: 1.5rem; font-weight:600;"><span class="ps-5">Course
                                                Category</span></th>
                                        <th style="font-size: 1.5rem; font-weight:600;"><span class="ps-5">Course
                                                Credit</span></th>
                                        <th style="font-size: 1.5rem; font-weight:600;"><span class="ps-5">Course
                                                Faculty</span></th>
                                        <th style="font-size: 1.5rem; font-weight:600;"><span class="ps-5">Course
                                                Rating</span></th>

                                    </tr>

                                    {{!-- <tr class="table-active">
                                        <th class="task-td text-center">Course Category</th>
                                        <th class="task-td text-center">Course Credit</th>
                                        <th class="task-td text-center">Course Faculty</th>
                                        <th class="task-td text-center">CCourse Rating</th>
                                    </tr> --}}
                                </thead>

                                {{#each course}}
                                <tr>

                                    <td>
                                        <p id="course-name">{{this.course_name}}</p>
                                    </td>
                                    <td>
                                        <p id="course-category">{{this.course_cat}}</p>
                                    </td>
                                    <td>
                                        <p id="course-credit">{{this.course_credit}}</p>
                                    </td>
                                    <td>
                                        <p id="course-faculty">{{this.course_faculty}}</p>
                                    </td>
                                    <td>
                                        <p id="course-rating">{{this.course_rating}}</p>
                                    </td>
                                </tr>
                                {{/each}}


                            </table>
                        </form>




                    </div>
                </div>
            </div>
        </div>
    </div>

    {{!-- including jquery and bootstrap js here in this index.hbs file! --}}
    <script src="../jq/jquery.js" type="text/javascript"></script>
    <script src="../js/bootstrap.js" type="text/javascript"></script>
</body>

</html>